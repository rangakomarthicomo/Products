{% extends '::base.html.twig' %}

{% block body -%}
<div class="container">
    <div class="content">
      <div class="row">
        <div class="login-form">
    <h1>Product list</h1>

    <table class="table-striped" cellspacing="15" cellpadding="15">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Summary</th>
                <th>Isactive</th>
                <th>Slug</th>
                <th>Brand</th>
                <th>Categires</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.summary }}</td>
                <td>{% if(entity.isActive == 1) %}Yes{% endif %}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.brand }}</td>
                <td>
                   {% for en in entity.category %}
                        {{ en.name }}
                   {% endfor  %}
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('product_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('product_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('product_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>
              </div>
            </div>
        </div>
    {% endblock %}
